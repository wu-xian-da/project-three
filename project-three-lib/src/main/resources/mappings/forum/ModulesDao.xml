<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jianfei.pt.dao.forum.ModulesDao">
	
	<insert id="insert">
		insert into for_modules (name,content,parent_id) values (#{name},#{content},#{parentId})
	</insert>
	
	<update id="update">
		update for_modules set
		name = #{name},
		content = #{content},
		parent_id = #{parentId}
		where id = #{id}
	</update>
	
	<select id="findModulesByParentId"  resultType="com.jianfei.pt.entity.forum.Modules">
		select * from for_modules where parent_id = #{parentId}
	</select>
	
	<select id="findById"  resultType="com.jianfei.pt.entity.forum.Modules">
		select * from for_modules where id = #{id}
	</select>
	
	<select id="findAll" resultType="com.jianfei.pt.entity.forum.Modules">
		select * from for_modules
	</select>
	
	<select id="findCondition"  resultType="com.jianfei.pt.entity.forum.Modules">
		select * from for_modules m where 1 = 1
		<if test="0 != parentId">and m.parent_id = #{parentId}</if>
		limit #{pn},#{ps}
	</select>
</mapper>